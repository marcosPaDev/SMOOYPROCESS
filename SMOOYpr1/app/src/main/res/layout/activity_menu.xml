<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    tools:context=".MenuActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="0.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primaryDark"
            android:padding="24dp">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_border"
                android:scaleType="centerInside"
                android:src="@drawable/smooylogo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProcesos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Procesos"
                android:textSize="16sp"
                android:fontFamily="@font/grande"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAvisos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Avisos"
                android:textSize="16sp"
                android:fontFamily="@font/grande"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_dialog_alert"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearUsuarios"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Usuarios"
                android:textSize="16sp"
                android:fontFamily="@font/grande"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEstablecimientos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Establecimientos"
                android:textSize="16sp"
                android:fontFamily="@font/grande"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_mapmode"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="24dp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cierreSesion"
                android:layout_width="match_parent"
                style="@style/CustomLogoutButton"
                android:layout_height="60dp"
                android:text="Cerrar Sesión"
                android:textSize="16sp"
                android:fontFamily="@font/grande"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_lock_power_off"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/errorColor"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCambiarContrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar contraseña"
                android:textSize="12sp"
                android:fontFamily="@font/grande"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:minHeight="0dp"
                android:padding="0dp"
                android:layout_marginTop="8dp"
                android:elevation="0dp"
                app:cornerRadius="8dp"/>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
