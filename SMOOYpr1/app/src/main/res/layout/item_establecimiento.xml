<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="0.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryDark"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombreEstablecimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre de Establecimiento"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/grande"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteEstablecimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDireccionEstablecimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Dirección"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/grande"
            android:alpha="0.9"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteEstablecimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNombreEstablecimiento" />

        <TextView
            android:id="@+id/tvTipoEstablecimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo: Cafetería"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/grande"
            android:alpha="0.8"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteEstablecimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDireccionEstablecimiento" />

        <TextView
            android:id="@+id/tvEstadoEstablecimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Estado: Activo"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/grande"
            android:alpha="0.7"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteEstablecimiento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTipoEstablecimiento" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteEstablecimiento"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="55dp"
            android:layout_height="56dp"
            android:contentDescription="Eliminar"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@android:drawable/ic_delete"
            app:iconTint="@android:color/white"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>